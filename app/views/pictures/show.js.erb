// Add the dialog title
$('#myModal h3').html("<i class=' glyphicon glyphicon-pencil'></i> <%= j @picture.title %>");

// Render the edit form
$('.modal-body').html('<%= j image_tag(@picture.image.url(:medium), class: "img-responsive") %>');

// Show the dynamic dialog
$('#myModal').modal("show");

// Set focus to the first element
$('#myModal').on('shown.bs.modal', function () {
	  $('.first_input').focus()
  })